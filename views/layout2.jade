doctype html
html
  head
    title= title
    script(src='jquery.min.js')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    script(src='/js/bootstrap.min.js')
    link(rel='stylesheet', href='/stylesheets/sticky-footer-navbar.css')

    block extraHeader

  body
    input(id='user_email', type='hidden', value='#{user.email}')
    input(id='user_id', type='hidden', value='#{user._id}')

    // Fixed navbar
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/home") Project name
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href="/home") Home
            li
              a(href="/category") Category
            li
              a(href="#contact") Contact
            li.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false")
                - var account = user.email.split('@')[0]
                | #{account}
                span.caret
              ul.dropdown-menu(role="menu")
                li
                  a(href="#") Account setting
                li.divider
                // li.dropdown-header Nav header
                li
                  a(href="/signout") Sign out
                li
        // /.nav-collapse

    block content

    footer.footer
      .container
        p.text-muted Place sticky footer content here.

    block javascript