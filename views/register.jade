extends layout

append extraHeader
  script(src='http://mymaplist.com/js/vendor/TweenLite.min.js')

append extraHeader
  style.
    body{
      background: url(http://mymaplist.com/img/parallax/back.png);
      background-color: #444;
      background: url(http://mymaplist.com/img/parallax/pinlayer2.png),url(http://mymaplist.com/img/parallax/pinlayer1.png),url(http://mymaplist.com/img/parallax/back.png);
    }
    .vertical-offset-100{
      padding-top:100px;
    }


block content
  .container
    .row.vertical-offset-100
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Sign up
          .panel-body
            form(accept-charset='UTF-8', role='form', action='/signup', method='POST')
              fieldset
                .form-group
                  input.form-control(placeholder='E-mail', name='email', type='text', required, autofocus)
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='', required)
                .form-group
                  input.form-control(placeholder='Password check', name='password2', type='password', value='', required)
                input.btn.btn-lg.btn-success.btn-block(type='submit', value='Create')
                a(href='/', class='text-center new-account' style='float: right') Sign in
                #message
                if message
                  span.label.label-danger #{message}

append javascript
  script.
    $(document).ready(function(){
      $(document).mousemove(function(e){
         TweenLite.to($('body'),
            .5,
            { css:
                {
                    backgroundPosition: ""+ parseInt(event.pageX/8) + "px "+parseInt(event.pageY/'12')+"px, "+parseInt(event.pageX/'15')+"px "+parseInt(event.pageY/'15')+"px, "+parseInt(event.pageX/'30')+"px "+parseInt(event.pageY/'30')+"px"
                }
            });
      });

      if ($('span.label-danger').length > 0) {
        $('span.label-danger').delay(1000).slideUp(400);
      }
    });
